<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="15dp"
    android:paddingTop="13dp"
    android:paddingRight="15dp">

    <RelativeLayout
        android:id="@+id/rl_financial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="账户提现"
            android:textColor="@color/voucher_normal_color"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="-200.00"
            android:textColor="#FF4444"
            android:textSize="14sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_financial_time"
        android:layout_below="@id/rl_financial"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="13dp">

        <TextView
            android:id="@+id/tv_add_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2019-07-26 11:25"
            android:textColor="@color/hint_text_color"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="支出"
            android:textColor="@color/hint_text_color"
            android:textSize="11sp" />
    </RelativeLayout>

    <ImageView
        android:layout_below="@id/rl_financial_time"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E5E5E5" />


</RelativeLayout>