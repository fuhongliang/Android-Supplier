<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/category_color"
    android:clickable="true"
    android:focusableInTouchMode="true">

    <include layout="@layout/layout_header"
        android:id="@+id/header"/>

    <ScrollView
        android:scrollbars="none"
        android:layout_below="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginLeft="15dp"
                android:gravity="center_vertical"
                android:text="店铺基本信息"
                android:textColor="#808080"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">
                <!--联系人-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="#ffffff"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/tv_text"
                        android:text="联系人" />

                    <include layout="@layout/layout_star" />

                    <EditText
                        android:id="@+id/et_contact_name"
                        style="@style/base_edit"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="15dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:maxLength="10"
                        android:gravity="center_vertical|end"
                        android:hint="请输入"
                        android:textColor="@color/typed_text_color"
                        android:textSize="17sp" />

                </LinearLayout>

                <TextView style="@style/dividing_line" />
                <!--手机号-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="#ffffff"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/tv_text"
                        android:text="手机号" />

                    <include layout="@layout/layout_star" />

                    <EditText
                        android:id="@+id/et_contact_phone"
                        style="@style/base_edit"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="15dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:inputType="phone"
                        android:maxLength="11"
                        android:gravity="center_vertical|end"
                        android:hint="请输入"
                        android:textColor="@color/typed_text_color"
                        android:textSize="17sp" />

                </LinearLayout>

                <TextView style="@style/dividing_line" />
                <!--店铺名称-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="#ffffff"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/tv_text"
                        android:text="店铺名称" />

                    <include layout="@layout/layout_star" />

                    <EditText
                        android:id="@+id/et_shop_name"
                        style="@style/base_edit"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="15dp"
                        android:maxLength="20"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="center_vertical|end"
                        android:hint="请输入"
                        android:textColor="@color/typed_text_color"
                        android:textSize="17sp" />

                </LinearLayout>

                <TextView style="@style/dividing_line" />
                <!--店铺分类-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="#ffffff"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/tv_text"
                        android:text="店铺分类" />

                    <include layout="@layout/layout_star" />

                    <TextView
                        android:id="@+id/tv_class"
                        style="@style/base_edit"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="center_vertical|end"
                        android:hint="请选择"
                        android:textColor="@color/typed_text_color"
                        android:textSize="17sp" />

                    <TextView style="@style/im_tongyong_jinru" />
                </LinearLayout>

                <TextView style="@style/dividing_line" />
                <!--店铺地址-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="#ffffff"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/tv_text"
                        android:text="店铺地址" />

                    <include layout="@layout/layout_star" />

                    <TextView
                        android:id="@+id/tv_city"
                        style="@style/base_edit"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="center_vertical|end"
                        android:hint="请选择"
                        android:textColor="@color/typed_text_color"
                        android:textSize="17sp" />

                    <TextView style="@style/im_tongyong_jinru" />
                </LinearLayout>

                <TextView style="@style/dividing_line" />

                <EditText
                    android:id="@+id/et_address"
                    style="@style/base_edit"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_marginLeft="15dp"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="详细地址例：1号楼101室"
                    android:textColor="@color/typed_text_color"
                    android:textSize="17sp" />

                <TextView style="@style/dividing_line" />
                <!--客服电话-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="#ffffff"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/tv_text"
                        android:text="客服电话" />
                    <include layout="@layout/layout_star" />

                    <EditText
                        android:id="@+id/et_service_tel"
                        style="@style/base_edit"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="15dp"
                        android:layout_weight="1"
                        android:maxLength="11"
                        android:inputType="phone"
                        android:background="@null"
                        android:gravity="center_vertical|end"
                        android:hint="请输入"
                        android:textColor="@color/typed_text_color"
                        android:textSize="17sp" />

                </LinearLayout>

            </LinearLayout>

            <TextView style="@style/dividing_line" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginLeft="15dp"
                android:gravity="center_vertical"
                android:text="店铺照片"
                android:textColor="#808080"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <!--店铺背景-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:minHeight="90dp"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_background"
                        style="@style/tv_text"
                        android:layout_centerVertical="true"
                        android:text="店铺背景" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="0dp"
                        android:layout_toRightOf="@id/tv_background"
                        android:text="*"
                        android:textColor="#ec1818" />

                    <cn.ifhu.supplier.view.GlideImageView.GlideImageView
                        android:id="@+id/iv_store_bg"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="60dp"
                        android:layout_toLeftOf="@id/tv_store_bg"
                        android:background="@drawable/ruzhu_tianjia" />

                    <TextView
                        android:id="@+id/tv_store_bg"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="15dp"
                        android:text="顶部店铺背景（支持jpg、jprg、png格式，大小不超过1mb）尺寸建议750*300px" />
                </RelativeLayout>

                <TextView style="@style/dividing_line" />
                <!--店铺LOGO-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:minHeight="90dp"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_logo"
                        style="@style/tv_text"
                        android:layout_centerVertical="true"
                        android:text="店铺LOGO" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="0dp"
                        android:layout_toRightOf="@id/tv_logo"
                        android:text="*"
                        android:textColor="#ec1818" />

                    <cn.ifhu.supplier.view.GlideImageView.GlideImageView
                        android:id="@+id/iv_logo"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="60dp"
                        android:layout_toLeftOf="@id/tv_store_logo"
                        android:background="@drawable/ruzhu_tianjia" />

                    <TextView
                        android:id="@+id/tv_store_logo"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="15dp"
                        android:text="店铺LOGO(支持jpg、jprg、png格式，大小不超过1mb)尺寸建议100*100px" />
                </RelativeLayout>

                <TextView style="@style/dividing_line" />
                <!--店铺营业执照-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:minHeight="90dp"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_license"
                        style="@style/tv_text"
                        android:layout_centerVertical="true"
                        android:text="营业执照" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="0dp"
                        android:layout_toRightOf="@id/tv_license"
                        android:text="*"
                        android:textColor="#ec1818" />

                    <cn.ifhu.supplier.view.GlideImageView.GlideImageView
                        android:id="@+id/iv_license"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="60dp"
                        android:layout_toLeftOf="@id/tv_store_license"
                        android:background="@drawable/ruzhu_tianjia" />

                    <TextView
                        android:id="@+id/tv_store_license"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="15dp"
                        android:text="营业执照(支持jpg、jprg、png格式，大小不超过1mb)" />
                </RelativeLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/tv_post"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="23dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/bg_btn_blue"
                android:gravity="center"
                android:layout_alignParentBottom="true"
                android:text="提交审核"
                android:textColor="#ffffff"
                android:textSize="17sp" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>